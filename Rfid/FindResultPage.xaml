<Page x:Class="Rfid.FindResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rfid"
      mc:Ignorable="d" 
     
      Title="{DynamicResource mFindUSer}"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ScrollViewer >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="0"
                          IsReadOnly="True"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              x:Name="GridBasicInformation" 
                              SelectionChanged="GridBasicInformation_SelectionChanged"
                              Margin="15"                               
                              AutoGeneratingColumn="GridBasicInformation_AutoGeneratingColumn"
                              AutoGeneratedColumns="GridBasicInformation_AutoGeneratedColumns"
                              />
            
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Column="1"
                            MouseLeftButtonUp="StackPanel_MouseLeftButtonUp"
                            Background="{DynamicResource AccentColorBrush}" >
            <TextBlock Name="NameUser"
                           Text="Name User"
                           FontSize="24"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           MaxWidth="220"
                           TextWrapping="WrapWithOverflow"
                               
                           
                           Margin="15,15,20,15"/>

            <Ellipse
                            Height="256"
                            Width="256"

                            Margin="15"
                           >
                <Ellipse.Fill>
                    <ImageBrush 
                                       x:Name="imageReport"
                                       Stretch="UniformToFill"
                                       ImageSource="/Image/ProfileIcon.png"
                                      />
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>
    </Grid>
</Page>
